<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/dump_items_press_selector"
        android:minHeight="50dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:layout_weight="3"
            android:gravity="center_vertical"
            android:text="@string/memmgr_debug_status"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/memory_enbale_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingRight="35dp"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:id="@+id/memory_enable_status_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/list_divider_material" />

    <Switch
        android:id="@+id/memory_manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dump_items_press_selector"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/memmgr_switch_flag_next_reboot"
        android:textOff="@string/item_memory_off"
        android:textOn="@string/item_memory_on"
        android:textSize="16sp" />

    <View
        android:id="@+id/memory_nodes_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/list_divider_material" />

    <TextView
        android:id="@+id/memory_nodes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dump_items_press_selector"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:paddingLeft="20dp"
        android:text="@string/memmgr_overall_detail"
        android:textSize="16sp" />

    <View
        android:id="@+id/memory_pieces_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/list_divider_material" />

    <TextView
        android:id="@+id/memory_pieces"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dump_items_press_selector"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:paddingLeft="20dp"
        android:text="@string/memmgr_pool_diagram"
        android:textSize="16sp" />

    <View
        android:id="@+id/memory_nodes_distribution_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/list_divider_material" />

    <TextView
        android:id="@+id/memory_nodes_distribution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dump_items_press_selector"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:paddingLeft="20dp"
        android:text="@string/memmgr_nodes_diagram"
        android:textSize="16sp" />

    <View
        android:id="@+id/memory_dump_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/list_divider_material" />

    <TextView
        android:id="@+id/memory_dump"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dump_items_press_selector"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:paddingLeft="20dp"
        android:text="@string/memmgr_dump"
        android:textSize="16sp" />

    <View
        android:id="@+id/memory_setting_divider"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@drawable/list_divider_material" />

    <TextView
        android:id="@+id/memory_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dump_items_press_selector"
        android:gravity="center_vertical"
        android:minHeight="50dp"
        android:paddingLeft="20dp"
        android:text="@string/memmgr_setting"
        android:textSize="16sp" />

</LinearLayout>