<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    android:padding="8dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="60dp"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:text="@string/test_bad_point_title"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/test_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/test_result_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_secondery_color"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:padding="8dp" >

        <include
            android:id="@+id/bad_pixel_num_layout"
            layout="@layout/row_detail" />

        <include
            android:id="@+id/local_bad_pixel_num_layout"
            layout="@layout/row_detail" />

        <include
            android:id="@+id/avg_diff_val_layout"
            layout="@layout/row_detail" />

        <include
            android:id="@+id/all_tilt_angle_layout"
            layout="@layout/row_detail" />

        <include
            android:id="@+id/block_tilt_angle_max_layout"
            layout="@layout/row_detail" />

        <include
            android:id="@+id/local_worst_layout"
            layout="@layout/row_detail" />

        <include
            android:id="@+id/singular_layout"
            layout="@layout/row_detail" />

        <include
            android:id="@+id/incircle_layout"
            layout="@layout/row_detail" />

        <include
            android:id="@+id/local_small_bad_pixel_layout"
            layout="@layout/row_detail"/>

        <include
            android:id="@+id/local_big_bad_pixel_layout"
            layout="@layout/row_detail"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@color/bg_secondery_color"
        android:gravity="center_horizontal"
        android:padding="8dp"
        android:text="@string/touch_rubber"
        android:textSize="16sp" />

</LinearLayout>