<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="4dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="17"
            android:gravity="center_vertical"
            android:text="@string/test_bad_point"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/test_result"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="12"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/cost_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:visibility="gone" />
    </LinearLayout>

    <include
        android:id="@+id/error_code_layout"
        layout="@layout/row_detail" />

    <include
        android:id="@+id/bad_pixel_num_layout"
        layout="@layout/row_detail" />

    <include
        android:id="@+id/local_bad_pixel_num_layout"
        layout="@layout/row_detail" />

    <include
        android:id="@+id/avg_diff_val_layout"
        layout="@layout/row_detail" />

    <include
        android:id="@+id/all_tilt_angle_layout"
        layout="@layout/row_detail" />

    <include
        android:id="@+id/block_tilt_angle_max_layout"
        layout="@layout/row_detail" />

    <include
        android:id="@+id/local_worst_layout"
        layout="@layout/row_detail" />

    <include
        android:id="@+id/singular_layout"
        layout="@layout/row_detail" />

    <include
        android:id="@+id/incircle_layout"
        layout="@layout/row_detail" />

    <include
        android:id="@+id/local_small_bad_pixel_layout"
        layout="@layout/row_detail" />

    <include
        android:id="@+id/local_big_bad_pixel_layout"
        layout="@layout/row_detail" />

</LinearLayout>