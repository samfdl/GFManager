<resources>

    <declare-styleable name="HoloCircularProgressBar">
        <attr name="stroke_width" format="dimension" />
        <attr name="progress" format="float" />
        <attr name="marker_progress" format="float" />
        <attr name="progress_color" format="color" />
        <attr name="progress_background_color" format="color" />
        <attr name="thumb_visible" format="boolean" />
        <attr name="marker_visible" format="boolean" />
        <attr name="android:gravity" />
    </declare-styleable>

    <attr name="circularProgressBarStyle" format="reference" />

    <attr name="text_size" format="dimension"/>
    <attr name="scale_length" format="dimension"/>
    <attr name="text_gap" format="dimension"/>

    <declare-styleable name="PixelMapView">
        <attr name="max_pixels" format="integer" />
        <attr name="max_pixel_width" format="dimension" />
        <attr name="max_pixel_per_line" format="integer" />
        <attr name="pixel_border_width" format="dimension" />
        <attr name="pixel_border_color" format="color" />
        <attr name="default_pixel_color" format="color" />
        <attr name="used_pixel_color" format="color" />
        <attr name="unused_pixel_color" format="color" />
        <attr name="max_xaxis_scales" format="integer"/>
        <attr name="max_yaxis_scales" format="integer"/>
        <attr name="show_scales" format="boolean"/>
        <attr name="scale_length"/>
        <attr name="text_size"/>
        <attr name="text_gap"/>
    </declare-styleable>

    <declare-styleable name="GFColumnDiagram">
        <attr name="max_height" format="integer"/>
        <attr name="column_color" format="color"/>
        <attr name="max_scales_yaxis" format="integer"/>
        <attr name="max_scales_xaxis" format="integer"/>
        <attr name="min_width" format="dimension"/>
        <attr name="min_height" format="dimension"/>
        <attr name="scale_length"/>
        <attr name="scale_stroke_width" format="dimension"/>
        <attr name="text_size"/>
        <attr name="text_gap_xaxis" format="dimension"/>
        <attr name="text_gap_yaxis" format="dimension"/>

    </declare-styleable>

</resources>