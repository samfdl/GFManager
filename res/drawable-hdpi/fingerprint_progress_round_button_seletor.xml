<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><shape android:shape="rectangle">
            <stroke android:width="@dimen/fingerprint_bondary_width" android:color="@color/fingerprint_progress_ring" />

            <corners android:radius="30dip" />
        </shape></item>
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <stroke android:width="@dimen/fingerprint_bondary_width" android:color="@color/fingerprint_progress_ring" />

            <solid android:color="@color/fingerprint_progress_ring_bg" />

            <corners android:radius="30dip" />
        </shape></item>

</selector>